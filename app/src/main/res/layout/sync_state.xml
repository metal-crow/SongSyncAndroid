<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/syncStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:text="Sync with PC" />

    <ProgressBar
        android:id="@+id/totalsongssyncedbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/syncStart"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/actioninfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totalsongssyncedbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="ACTIONNAME"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ProgressBar
        android:id="@+id/singlesongdownloadprogress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/songname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/singlesongdownloadprogress"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="31dp"
        android:text="SONGNAME"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>